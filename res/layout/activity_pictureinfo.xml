<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pictureInfo_L"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">    
    <ImageView
        android:id="@+id/picture_info_image_back"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"/>
    <FrameLayout 
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical"
    	android:background="@drawable/music_bg">
    	<LinearLayout 
    	    android:id="@+id/head_linearLayout"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:gravity="left|center_vertical"
	    	android:orientation="horizontal"
	    	android:layout_marginLeft="50dp"
	    	android:layout_marginTop="10dp"
	    	android:clickable="true"
        	android:focusable="true">
	    	<ImageView 
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:scaleType="fitCenter"
	    	    android:src="@drawable/back_img_selector"
	    	    android:layout_gravity="center_vertical"
	    	    android:duplicateParentState="true"/>
	    	<TextView 
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_gravity="center_vertical"
	    	    android:textSize="@dimen/picture_info_big_title"
	    	    android:text="@string/picture_info_detail"
	    	    android:duplicateParentState="true"
	    	    android:textColor="@drawable/back_textcolor_selector"/>    	         	     	  
		</LinearLayout> 
		
    	<RelativeLayout 
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"> 
	    	<LinearLayout 
	    	    android:layout_width="wrap_content"
	    		android:layout_height="match_parent"
	    		android:gravity="center"
	    		android:orientation="vertical"
	    	    android:layout_alignParentLeft="true"
	    	    android:layout_marginLeft="197dp"
	    	    android:layout_marginTop="50dp">
	    	    <LinearLayout 
	    	        android:layout_width="wrap_content"
	    	        android:layout_height="wrap_content"
	    	        android:orientation="vertical">
	    	        <ImageView
	    	            android:id="@+id/picture_info_thumbnail"
	    	            android:layout_width="@dimen/picture_info_thumbnail_width"
	    	            android:layout_height="@dimen/picture_info_thumbnail_height"
	    	            android:scaleType="fitCenter"
	    	            android:background="@drawable/black_bg"/>
	    	        <com.konka.eplay.modules.AlwaysMarqueeTextView
	    	            android:id="@+id/picture_info_name"
	    	            android:layout_width="256dp"
	    	            android:layout_height="wrap_content"
	    	            android:textSize="@dimen/picture_info_big_title"
	    	            android:textColor="@color/picture_info_name"
	    	            android:gravity="center"
	    	            android:layout_gravity="center"
	    	            android:text="@string/unknown"
	    	            android:singleLine="true"
						android:ellipsize="marquee"
	    	            android:layout_marginTop="20dp"
	    	            android:layout_marginBottom="20dp"/>	    	        
	    	    </LinearLayout>
	    	    
	    	    <LinearLayout 
	    	        android:layout_width="wrap_content"
	    	        android:layout_height="wrap_content"
	    	        android:orientation="vertical"
	    	        android:layout_gravity="left|center_vertical">	    
	    	        <include 
	    	            android:id="@+id/picture_info_size"
	    	            layout="@layout/picture_info_singal_text_2"/>	
	    	        <include 
	    	            android:id="@+id/picture_info_dimen"
	    	            layout="@layout/picture_info_singal_text_2"/>
	    	        <include 
	    	            android:id="@+id/picture_info_date"
	    	            layout="@layout/picture_info_singal_text_2"/>
	    	        <include 
	    	            android:id="@+id/picture_info_path"
	    	            layout="@layout/picture_info_singal_text_2"/>        
	    	    </LinearLayout>
	    	    
	    	    <LinearLayout 
	    	        android:layout_width="367dp"
	    	        android:layout_height="wrap_content"
	    	        android:orientation="horizontal"
	    	        android:layout_gravity="left|center_vertical"
	    	        android:layout_marginTop="40dp">
	    	    <FrameLayout 
	    	            android:layout_width="wrap_content"
	    	            android:layout_height="wrap_content">
<!-- 	    	        <ImageView
	    	            android:layout_width="150dp"
	    	            android:layout_height="40dp"
	    	            android:background="@drawable/picture_info_shape"
	    	            android:layout_gravity="center"/> -->
	    	        <TextView 
	    	            android:id="@+id/picture_info_open"
	    	            android:layout_gravity="center"
	    	            android:layout_width="171dp"
	    	            android:layout_height="60dp"
	    	            android:paddingTop="10dp"
	    	            android:paddingBottom="10dp"
	    	            android:text="@string/picture_info_open"
	    	            android:textSize="@dimen/picture_info_small_title"
	    	            android:textColor="@color/picture_info_text_bright"
	    	            android:gravity="center"
	    	            android:focusable="true"
	    	            android:background="@drawable/rounded_btn_selector"/>
	    	    </FrameLayout>
	    	    <FrameLayout 
	    	            android:layout_width="wrap_content"
	    	            android:layout_height="wrap_content"
	    	            android:layout_marginLeft="30dp">
<!-- 	    	        <ImageView
	    	            android:layout_width="150dp"
	    	            android:layout_height="40dp"
	    	            android:background="@drawable/picture_info_shape"
	    	            android:layout_gravity="center"/> -->
	    	        <TextView
	    	            android:id="@+id/picture_info_delete"
	    	            android:layout_gravity="center"
	    	            android:layout_width="171dp"
	    	            android:layout_height="60dp"
	    	            android:paddingTop="10dp"
	    	            android:paddingBottom="10dp"
	    	            android:text="@string/picture_info_delete"
	    	            android:textSize="@dimen/picture_info_small_title"
	    	            android:textColor="@color/picture_info_text_bright"
	    	            android:gravity="center"
	    	            android:focusable="true"
	    	            android:background="@drawable/rounded_btn_selector"/>
	    	        </FrameLayout>	    	        
	    	    </LinearLayout>
	    	</LinearLayout>   
	    	
	    	<LinearLayout 
	    	    android:layout_width="wrap_content"
	    		android:layout_height="match_parent"
	    		android:gravity="center"
	    		android:orientation="vertical"
	    		android:layout_alignParentRight="true"
	    		android:layout_marginTop="10dp">
	    	    <LinearLayout 
	    	        android:layout_width="wrap_content"
	    	        android:layout_height="wrap_content"
	    	        android:orientation="vertical"
	    	        android:layout_marginTop="10dp">
	    	        <TextView
	    	            android:layout_width="wrap_content"
	    	            android:layout_height="wrap_content"
	    	            android:text="@string/picture_info_camera"
	    	            android:textColor="@color/picture_info_text_dim"
	    	            android:textSize="@dimen/picture_info_small_title"
	    	            android:layout_marginLeft="95dp"
	    	            android:layout_marginBottom="20dp"/>
	    	        <include 
	    	            android:id="@+id/picture_info_camera_manufacturers"
	    	            layout="@layout/picture_info_singal_text"/>
	    	        <include 
	    	            android:id="@+id/picture_info_camera_model"
	    	            layout="@layout/picture_info_singal_text"/>
	    	        <include 
	    	            android:id="@+id/picture_info_f_number"
	    	            layout="@layout/picture_info_singal_text"/>
	    	        <include 
	    	            android:id="@+id/picture_info_exposure_time"
	    	            layout="@layout/picture_info_singal_text"/>
	    	        <include 
	    	            android:id="@+id/picture_info_iso"
	    	            layout="@layout/picture_info_singal_text"/>
	    	        <include 
	    	            android:id="@+id/picture_info_exposure_compensation"
	    	            layout="@layout/picture_info_singal_text"/>
	    	        <include 
	    	            android:id="@+id/picture_info_focal_length"
	    	            layout="@layout/picture_info_singal_text"/>
	    	        <include 
	    	            android:id="@+id/picture_info_maximum_aperture"
	    	            layout="@layout/picture_info_singal_text"/>
	    	        <include 
	    	            android:id="@+id/picture_info_metering_mode"
	    	            layout="@layout/picture_info_singal_text"/>
	    	        <include 
	    	            android:id="@+id/picture_info_object_distance"
	    	            layout="@layout/picture_info_singal_text"/>
	    	        <include 
	    	            android:id="@+id/picture_info_flash_mode"
	    	            layout="@layout/picture_info_singal_text"/>	    	        
	    	    </LinearLayout>
	    	    
	    	    <LinearLayout
	    	        android:layout_width="wrap_content"
	    	        android:layout_height="wrap_content"
	    	        android:orientation="vertical"
	    	        android:layout_marginTop="20dp">
	    	        <TextView
	    	            android:layout_width="wrap_content"
	    	            android:layout_height="wrap_content"
	    	            android:text="@string/picture_info_advanced_photo_paper"
	    	            android:textColor="@color/picture_info_text_dim"
	    	            android:textSize="@dimen/picture_info_small_title"
	    	            android:layout_marginLeft="85dp"
	    	            android:layout_marginBottom="20dp"/>
	    	        <include 
	    	            android:id="@+id/picture_info_contrast"
	    	            layout="@layout/picture_info_singal_text"/>
	    	        <include 
	    	            android:id="@+id/picture_info_brightness"
	    	            layout="@layout/picture_info_singal_text"/>
	    	        <include 
	    	            android:id="@+id/picture_info_exposure_program"
	    	            layout="@layout/picture_info_singal_text"/>
	    	        <include 
	    	            android:id="@+id/picture_info_saturability"
	    	            layout="@layout/picture_info_singal_text"/>
	    	        <include 
	    	            android:id="@+id/picture_info_definition"
	    	            layout="@layout/picture_info_singal_text"/>
	    	        <include 
	    	            android:id="@+id/picture_info_white_balance"
	    	            layout="@layout/picture_info_singal_text"/>
	    	    </LinearLayout>
	    	</LinearLayout>	         	     	  
		</RelativeLayout> 
		         	     	  
	</FrameLayout> 	     	  
</FrameLayout>