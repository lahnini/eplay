<?xml version="1.0" encoding="utf-8"?>
<FrameLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout_scale_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/black"
    android:focusable="true"> 
    <com.konka.eplay.modules.photo.KeyScaleImageView 
        android:id="@+id/imageView_scale_activity"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="matrix"
        android:layout_gravity="center"/> 
    <LinearLayout 
        android:id="@+id/linearLayout_scale_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="bottom|right"
        android:focusable="true">
    <fragment android:name="com.konka.eplay.modules.photo.ImageGuideFragment"
        android:id="@+id/image_guide_fragment"
        android:layout_width="500dp"
        android:layout_height="500dp"/> 
    </LinearLayout>
</FrameLayout>