<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <!-- 背景 -->

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:background="@drawable/picture_tag_dialog"
        android:paddingLeft="1dp"
        android:paddingRight="1dp" >
    </LinearLayout>

    <FrameLayout
        android:id="@+id/picture_browser_add_popupwindow_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text_yellow"
            style="@style/picture_browser_add_popupwindow"
            android:text="@string/mark_yellow" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            
            android:background="@drawable/label_one"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/photo_details_popupwindow_yellow_imageView"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:background="@drawable/picture_add_popupwindow_selector"
        android:focusable="true" 
            android:layout_gravity="center"
            android:scaleType="fitCenter" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/picture_browser_add_popupwindow_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        >

        <TextView
            android:id="@+id/text_blue"
            style="@style/picture_browser_add_popupwindow"
            android:text="@string/mark_blue" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/label_two"
          
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/photo_details_popupwindow_blue_imageView"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
              android:focusable="true"
            android:background="@drawable/picture_add_popupwindow_selector"
            android:scaleType="fitCenter" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/picture_browser_add_popupwindow_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"  >

        <TextView
            android:id="@+id/text_red"
            style="@style/picture_browser_add_popupwindow"
            android:text="@string/mark_red" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/label_three"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/photo_details_popupwindow_red_imageView"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:focusable="true"
             android:background="@drawable/picture_add_popupwindow_selector"
            android:scaleType="fitCenter" />
    </FrameLayout>

</FrameLayout>