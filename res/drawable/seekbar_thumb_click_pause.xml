<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><layer-list>
            <item android:drawable="@drawable/player_thumb_clicked"/>
            <item><bitmap android:gravity="center" android:src="@drawable/thumb_play_tag" />
            </item>
        </layer-list></item>
    <item android:state_pressed="true"><layer-list>
            <item android:drawable="@drawable/progress_thumb"/>
            <item><bitmap android:gravity="center" android:src="@drawable/progress_thumb_selected" />
            </item>
        </layer-list></item>

        <item android:state_hovered="true"><layer-list>
            <item android:drawable="@drawable/player_thumb_clicked"/>
            <item><bitmap android:gravity="center" android:src="@drawable/thumb_play_tag" />
            </item>
        </layer-list></item>
    <item android:drawable="@drawable/progress_thumb" android:state_focused="false"/>

</selector>